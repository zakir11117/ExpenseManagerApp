@model IEnumerable<ExpenseManagerApp.Models.Expense>

@{
    ViewData["Title"] = "Expenses";
}

<h1>Expenses</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Add Expense</a>
    <a class="btn btn-outline-secondary" asp-controller="Export" asp-action="ExpensesCsv">Export CSV</a>
</p>

<table class="table">
    <thead>
        <tr><th>Date</th><th>Category</th><th>Amount</th><th>Note</th></tr>
    </thead>
    <tbody>
    @foreach (var e in Model) {
        <tr>
            <td>@e.Date.ToString("yyyy-MM-dd")</td>
            <td>@e.Category</td>
            <td>@e.Amount</td>
            <td>@e.Note</td>
        </tr>
    }
    </tbody>
</table>
